<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="MyAppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyAppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/color_145bba</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/color_145bba</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView"></style>

    <style name="main_tab_bottom">
        <item name="android:textSize">@dimen/bottom_tab_font_size</item>
        <item name="android:textColor">@color/bottom_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:paddingTop">@dimen/bottom_tab_padding_up</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- 去按钮立体效果 -->
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <!-- Toolbar的样式，继承系统的Toolbar样式 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/textSize_15</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- top 状态栏 -->
    <style name="top_title_strues">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="title_text" parent="text_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="buttom_text" parent="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- 字体基本样式 -->
    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_15</item>
    </style>

    <!-- 字体基本样式,14sp -->
    <style name="text_style_14sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_14</item>
    </style>

    <!-- 基本黑色字体样式 -->
    <style name="text_common_style" parent="text_style">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 基本黑色字体样式,14sp -->
    <style name="text_common_style_14sp" parent="text_common_style">
        <item name="android:textSize">@dimen/textSize_14</item>
    </style>

    <!-- edittext style -->
    <style name="edittext_style" parent="button_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/denglukuang_bg</item>
    </style>

    <!-- button style -->
    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="title_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableLeft">@drawable/btn_back</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ListView条目中进入图标样式 -->
    <style name="list_item_imageview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/jinru</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/margin_15</item>
    </style>

    <!-- gridview的基本样式(3列) -->
    <style name="gridview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">@dimen/margin_5</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:numColumns">3</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:longClickable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">@dimen/margin_5</item>
    </style>

    <!-- gridview的基本样式(4列) -->
    <style name="gridview_style_4" parent="gridview_style">
        <item name="android:numColumns">4</item>
    </style>

    <!-- popu 时间选择器动画 -->
    <style name="PopupWindowTimerAnimation">
        <item name="android:windowEnterAnimation">@anim/popu_time_show_anim</item>
        <item name="android:windowExitAnimation">@anim/popu_time_hidden_anim</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <!-- item两侧线条样式 -->
    <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_0.5</item>
        <item name="android:background">@color/gray_line</item>
    </style>

    <!-- 定制的切割线，屏幕两侧有间距 -->
    <style name="line_style_new">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_0.5</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!-- listview item的样式 -->
    <style name="job_listview">
        <item name="android:background">@color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- popuWindow显示动画 -->
    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- popuWindow显示动画 -->
    <style name="AnimationPreview_2">
        <item name="android:windowEnterAnimation">@anim/fade_in_2</item>
        <item name="android:windowExitAnimation">@anim/fade_out_2</item>
    </style>

    <!-- popup 弹出dialog 样式 -->
    <style name="popup_dialog_style" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <!-- 自定义dialog按钮 -->
    <style name="dialog_btn_style">
        <item name="android:layout_height">@dimen/layout_45</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/dialog_white_btn_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_17</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="dialog_btn_style_3">
        <item name="android:layout_height">@dimen/layout_45</item>
        <item name="android:background">@drawable/dialog_white_btn_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_17</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/green_97ce01</item>
    </style>

    <style name="select_item_style" parent="job_listview">
        <item name="android:background">@drawable/gridview_item_selector</item>
        <item name="android:layout_height">@dimen/layout_45</item>
        <item name="android:paddingLeft">@dimen/padding_15</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingRight">@dimen/padding_10</item>
    </style>

    <style name="poor_house_left_text_style" parent="text_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="poor_house_right_text_style" parent="poor_house_left_text_style">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/margin_10</item>
    </style>

    <style name="Popupwindow_bottem">
        <item name="android:windowEnterAnimation">@anim/window_out</item>
        <item name="android:windowExitAnimation">@anim/window_back</item>
    </style>

    <style name="wr_wr_ml_mt_mr_5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_5</item>
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:layout_marginRight">@dimen/margin_5</item>
    </style>


        <declare-styleable name="MaxHeightView">
            <attr name="mhv_HeightRatio" format="reference|float" />
            <attr name="mhv_HeightDimen" format="reference|dimension" />
        </declare-styleable>

</resources>
