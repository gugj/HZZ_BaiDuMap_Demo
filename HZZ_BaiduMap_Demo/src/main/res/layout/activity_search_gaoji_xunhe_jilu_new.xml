<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/top_title_strues"
    android:orientation="vertical" >
    
    <include layout="@layout/activity_title_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_hdmc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="开始时间"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="15sp"
                            android:id="@+id/tv_start_time"
                            android:layout_marginRight="5dp"
                            android:hint="开始的时间"
                            android:textColorHint="@color/gray"
                            android:layout_toRightOf="@id/tv_hdmc"
                            android:layout_marginLeft="20dp"
                            android:clickable="true"
                            android:background="@null"
                            />
                    </RelativeLayout>
                    <View
                        android:id="@+id/view0"
                        style="@style/line_style_new" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_hzxm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="结束时间"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="15dp"
                            android:id="@+id/tv_end_time"
                            android:hint="结束的时间"
                            android:textColorHint="@color/gray"
                            android:layout_toRightOf="@id/tv_hzxm"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="5dp"
                            android:clickable="true"
                            android:background="@null"
                            />
                    </RelativeLayout>
                    <View
                        android:id="@+id/view1"
                        style="@style/line_style_new" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_xzq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="处理方式"/>
                        <TextView android:layout_width="match_parent"
                                  android:id="@+id/tv_chuli_fangshi"
                                  android:layout_height="wrap_content"
                                  android:padding="5dp"
                                  android:textSize="15dp"
                                  android:layout_marginRight="5dp"
                                  android:layout_toRightOf="@id/tv_xzq"
                                  android:layout_marginLeft="20dp"
                                  android:hint="处理的方式"
                                  android:textColorHint="@color/gray"
                                  android:clickable="true"
                                  android:background="@null"
                            />
                    </RelativeLayout>
                    <View
                        android:id="@+id/view3"
                        style="@style/line_style_new"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/btn_quxiao"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="取消"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/btn_quding"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="确定"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



