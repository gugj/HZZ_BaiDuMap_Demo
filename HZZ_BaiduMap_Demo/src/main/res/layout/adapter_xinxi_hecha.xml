<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <!--<TextView-->
        <!--android:id="@+id/tv_name"-->
        <!--style="@style/text_common_style"/>-->

    <com.roch.hzz_baidumap_demo.view.CircleImageView
        android:id="@+id/iv_xinxi_hecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wutu"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_20"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            style="@style/list_item_imageview_style"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        style="@style/text_common_style_14sp"
                        android:layout_marginLeft="5dp"
                        android:text="河道名称："/>
                    <TextView
                        android:id="@+id/tv_heduan_mingcheng"
                        style="@style/text_style_14sp"
                        android:text="市辖区"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        style="@style/text_common_style_14sp"
                        android:layout_marginLeft="5dp"
                        android:text="上报时间："/>
                    <TextView
                        android:id="@+id/tv_shangbao_name"
                        style="@style/text_style_14sp"
                        android:layout_marginLeft="5dp"
                        android:text="李四"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        style="@style/text_common_style_14sp"
                        android:layout_marginLeft="5dp"
                        android:text="问题描述："/>
                    <TextView
                        android:id="@+id/tv_wenti_type"
                        style="@style/text_style_14sp"
                        android:layout_marginLeft="5dp"
                        android:text="水质异常"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        style="@style/text_common_style_14sp"
                        android:layout_marginLeft="5dp"
                        android:text="确认状态："/>
                    <TextView
                        android:id="@+id/tv_wenti_detail"
                        style="@style/text_style_14sp"
                        android:layout_marginLeft="5dp"
                        android:text="河水水质异常"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        style="@style/text_common_style_14sp"
                        android:layout_marginLeft="5dp"
                        android:text="处理状态："/>
                    <TextView
                        android:id="@+id/tv_chuli_zhangtai"
                        style="@style/text_style_14sp"
                        android:layout_marginLeft="5dp"
                        android:text="未处理"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        style="@style/text_common_style_14sp"
                        android:layout_marginLeft="5dp"
                        android:text="处理结果："/>
                    <TextView
                        android:id="@+id/tv_chuli_jieguo"
                        style="@style/text_style_14sp"
                        android:layout_marginLeft="5dp"
                        android:text="暂未联系处理"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>