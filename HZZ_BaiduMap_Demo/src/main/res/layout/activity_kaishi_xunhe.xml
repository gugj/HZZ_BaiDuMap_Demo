<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/top_title_strues"
    android:orientation="vertical">

    <include layout="@layout/activity_title_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <include layout="@layout/navigation_content1"></include>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray_light_bg">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp">
            <TextView
                android:id="@+id/tv_kaishi_xunhe"
                style="@style/buttom_text"
                android:layout_marginTop="5dp"
                android:drawablePadding="2dp"
                android:layout_marginBottom="3dp"
                android:drawableTop="@drawable/start_normal"
                android:text="开始巡河"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp">
            <TextView
                android:id="@+id/tv_xinxi_shangbao"
                style="@style/buttom_text"
                android:layout_marginTop="5dp"
                android:drawablePadding="2dp"
                android:layout_marginBottom="3dp"
                android:drawableTop="@drawable/shangbao"
                android:text="信息上报"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="2dp">
            <TextView
                android:id="@+id/tv_jieshu_xunhe"
                style="@style/buttom_text"
                android:layout_marginTop="5dp"
                android:drawablePadding="2dp"
                android:layout_marginBottom="3dp"
                android:drawableTop="@drawable/end"
                android:text="结束巡河"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
