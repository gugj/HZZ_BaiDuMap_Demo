<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <!--<TextView-->
        <!--android:id="@+id/tv_name"-->
        <!--style="@style/text_common_style"/>-->

    <ImageView
        style="@style/list_item_imageview_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/text_common_style_14sp"
                    android:layout_marginLeft="5dp"
                    android:text="河道名称："/>
                <TextView
                    android:id="@+id/tv_location_name"
                    style="@style/text_style_14sp"
                    android:text="黄河"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/text_common_style_14sp"
                    android:layout_marginLeft="5dp"
                    android:text="河段名称："/>
                <TextView
                    android:id="@+id/tv_heduan_mingcheng"
                    style="@style/text_style_14sp"
                    android:layout_marginLeft="5dp"
                    android:text="长江"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/text_common_style_14sp"
                    android:layout_marginLeft="5dp"
                    android:text="行政区划："/>
                <TextView
                    android:id="@+id/tv_wenti_type"
                    style="@style/text_style_14sp"
                    android:layout_marginLeft="5dp"
                    android:text="测试"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/text_common_style_14sp"
                    android:layout_marginLeft="5dp"
                    android:text="河道长度："/>
                <TextView
                    android:id="@+id/tv_wenti_detail"
                    style="@style/text_style_14sp"
                    android:layout_marginLeft="5dp"
                    android:text="15"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/text_common_style_14sp"
                    android:layout_marginLeft="5dp"
                    android:text="起点："/>
                <TextView
                    android:id="@+id/tv_start_time"
                    style="@style/text_style_14sp"
                    android:layout_marginLeft="5dp"
                    android:text="长江"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/text_common_style_14sp"
                    android:layout_marginLeft="5dp"
                    android:text="终点："/>
                <TextView
                    android:id="@+id/tv_end_time"
                    style="@style/text_style_14sp"
                    android:layout_marginLeft="5dp"
                    android:text="黄河"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>